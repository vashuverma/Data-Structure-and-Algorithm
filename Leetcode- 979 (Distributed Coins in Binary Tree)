class Solution {
public:
    int helper(TreeNode* root, int &moves) {
        if(root == nullptr) {
            return 0;
        }
        int left = helper(root->left, moves);
        int right = helper(root->right, moves);
        moves += abs(left) + abs(right);
        return left + right + root->val - 1;
    }
    int distributeCoins(TreeNode* root) {
        int moves = 0;
        helper(root, moves);
        return moves;
    }
};
